@model List<assignment_aspwebapp.Models.Identity.UserRoleModel>;

@{
    ViewData["Title"] = "Manage Role";
    var userId = ViewBag.userId;

}

<partial name="~/Views/Shared/Partials/_Header.cshtml" />

<a asp-controller="Account" asp-action="LogOut">Sign out</a>
  <section class="managerolesview">

    <form asp-action="ManageUserRole" method="post" asp-route-userId="@userId">
        <div class="card">
            <div class="cardbody">
                          <h2>Manage User Role</h2>  
                
        @for (int i = 0; i < Model.Count; i++)
        {
                <div class="form-item">
                    <input type="hidden" asp-for="@Model[i].RoleId">
                    <input type="hidden" asp-for="@Model[i].RoleName">
                    <input asp-for="@Model[i].IsSelected">
                    <label asp-for="@Model[i].IsSelected">
                        @Model[i].RoleName
                    </label>
                </div>
        }
                
            <input type="submit"></input>
            </div>
        </div>
        </form>
     
    </section>